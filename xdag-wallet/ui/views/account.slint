                                horizontal-alignment: center;
                            }

                            Rectangle {
                                height: 30px;
                            }
                        }

                        t2 := TouchArea {
                            mouse-cursor: pointer;
                            clicked => {
                                show-network = true;
                            }
                        }
                    }

                    Rectangle {
                        row: 1;
                        col: 0;
                        background: t3.pressed ? ROOT_GLOBAL.blockColor : t3.has-hover ? ROOT_GLOBAL.transactionColor : ROOT_GLOBAL.blockColor;
