            }

            HorizontalLayout {
                alignment: center;
                spacing: 35px;
                XButton {
                    font-size: 20px;
                    text: "";
                    height: 36px;
                    width: 36px;
                    icon: @image-url("../assets/telegram.svg");
                    show-icon: true;
                    round: true;
                    clicked => {
                        WalletAccounts.open-link(ROOT-GLOBAL.telegram);
                    }
                }

                XButton {
                    font-size: 20px;
                    text: "";
                    height: 36px;
                    width: 36px;
                    icon: @image-url("../assets/discord.svg");
